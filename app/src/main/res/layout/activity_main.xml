<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f1ffffff"
    tools:context="com.gdgandroidbolivia.viewdewhatsapp.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido a WhatsApp"
        android:gravity="center_horizontal"
        android:textSize="23dp"
        android:textColor="#f10f636e"
        android:layout_marginTop="15dp"/>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/imagen"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="Toca ¨Aceptar y continuar¨ para aceptar los "
        android:gravity="center"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f15fc2ec"
        android:textSize="13dp"
        android:text="Terminos y de servicio y Politica de privacidad de WhatsApp"
        android:gravity="center_horizontal" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurar"
        android:textColor="#f1ffffff"
        android:background="@drawable/b1"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/b2"
        android:text="Aceptar y continuar"
        android:textColor="#f1ffffff" />


</LinearLayout>
